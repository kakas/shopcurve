<section class = "container padding-top-3x padding-bottom-3x" >
  <div class="row">
    <div class="col-sm-offset-2 col-sm-8 col-md-offset-4 col-md-4 padding-bottoms">
      <h2>Sign up</h2>
      <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.alert_message "Please fix the errors below." %>
        <%= f.email_field :email, placeholder: "Email"%>
        <%= f.password_field :password, placeholder: "Password" %>
        <%= f.password_field :password_confirmation, placeholder: "Repeat Password" %>
        <%= f.submit "Sign up", class: "btn btn-primary btn-block waves-effect waves-light" %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
