<%= form_tag pay2go_service.url, method: :post do |f| %>
  <%= hidden_field_tag "MerchantID",      current_shop.merchant_id %>
  <%= hidden_field_tag "RespondType",     "JSON" %>
  <%= hidden_field_tag "CheckValue",      pay2go_service.check_value %>
  <%= hidden_field_tag "TimeStamp",       pay2go_service.time_stamp %>
  <%= hidden_field_tag "Version",         "1.2" %>
  <%= hidden_field_tag "LangType",        "zh-TW" %>
  <%= hidden_field_tag "MerchantOrderNo", pay2go_service.merchant_order_no %>
  <%= hidden_field_tag "Amt",             pay2go_service.amt %>
  <%= hidden_field_tag "ItemDesc",        "金流測試" %>
  <%= hidden_field_tag "TradeLimit",      300 %>
  <%= hidden_field_tag "LoginType",       0 %>
  <%= hidden_field_tag "Email",           order.customer.email %>
  <%= hidden_field_tag "ReturnURL",       pay2go_return_shop_order_url(current_shop, order.token) %>
  <%= hidden_field_tag "CREDIT",          1 %>

  <%= submit_tag "Credit Card", class: "btn btn-danger btn-lg" %>
<% end %>
