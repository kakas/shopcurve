<%= form_tag pay2go_service.url, method: :post do |f| %>
  <%= render "pay2go_common_fields",  pay2go_service: pay2go_service %>
  <%= hidden_field_tag "Email",       order.info_email %>
  <%= hidden_field_tag "CustomerURL", pay2go_customer_shop_order_url(current_shop, order.token) %>
  <%= hidden_field_tag "NotifyURL",   pay2go_notify_shop_order_url(current_shop, order.token) %>
  <%= hidden_field_tag "CVS",         1 %>

  <%= submit_tag "7-11", class: "btn btn-danger btn-lg" %>
<% end %>
