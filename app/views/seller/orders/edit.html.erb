<div class="col-md-12">
  <div class="container padding-top">
    <h2>Product Info</h2>
    <div class="table-responsive">
      <table>
        <thead>
          <th>Product Name</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Subtotal</th>
        </thead>
        <tbody>
          <% @order.items.each do |item| %>
            <tr>
              <td><%= item.name %></td>
              <td><%= item.price %></td>
              <td><%= item.quantity %></td>
              <td><%= item.subtotal %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="pull-right">
      Total:
      <%= number_to_currency @order.total_price %>
    </div>
  </div>

  <div class="container padding-top">
    <div class="col-sm-4 padding-bottom">
      <h2>Shipping Info</h2>
      <ul>
        <li><%= @order.info_name %></li>
        <li><%= @order.info_phone %></li>
        <li><%= @order.info_address %></li>
      </ul>
    </div>
    <div class="col-md-3 col-md-offset-1 col-sm-8 padding-bottom">
      <h2>Order Status:</h2>
      <aside>
        <%= bootstrap_form_for [:seller, @order] do |f| %>
          <%= f.select :status,         enum_option_pairs(Order, :status) %>
          <%= f.select :payment_status, enum_option_pairs(Order, :payment_status) %>
          <%= f.select :goods_status,   enum_option_pairs(Order, :goods_status) %>
        <% end %>
      </aside>
    </div>
  </div>
</div>
