<header class="navbar">
  <div class="navbar-header">
    <%= link_to current_shop.title, products_path, class: "site-logo visible-desktop" %>
  </div>

  <!-- Mobile Menu Wrapper -->
  <div class="mobile-menu-wrapper">
    <!-- Toolbar -->
    <div class="toolbar">
      <% if !current_user %>
        <%= link_to user_facebook_omniauth_authorize_path do %>
          <i class="socicon-facebook"></i>
        <% end %>
      <% else %>
        <%= link_to render_icon("power_settings_new"), destroy_user_session_path, method: :delete %>
      <% end %>
      <div class="cart-btn">
        <%= link_to cart_path do %>
          <i>
            <span class="material-icons shopping_basket"></span>
            <span class="count"><%= current_cart.cart_items.size %></span>
          </i>
        <% end %>
      </div>
      <%= link_to render_icon("message"), "#" %>
    </div>

    <!-- Main Navigation -->
    <nav class="main-navigation">
      <ul class="menu">
        <% if current_user %>
          <li><%= link_to "Account Info", edit_account_user_path %></li>
          <li><%= link_to "Orders History", account_orders_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>

</header>
